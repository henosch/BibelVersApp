<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bibelvers" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/wall_status_bar_color</item>
        <item name="android:navigationBarColor">@color/wall_navigation_bar_color</item>
    </style>

    <style name="Theme.Bibelvers.Stream" parent="Theme.Bibelvers">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="Theme.Bibelvers.Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorAlertDialogListItem">@color/verse_text_color</item>
        <item name="android:textColorPrimary">@color/verse_reference_color</item>
    </style>
</resources>
